<launch>
  <arg name="INITIAL_POSE_X" default="1.0" />
  <arg name="INITIAL_POSE_Y" default="0.0" />
  <arg name="INITIAL_POSE_YAW" default="0.0" />
  <include file="$(find jsk_pr2_startup)/pr2_gazebo.launch">
    <arg name="world" value="$(find eusurdf)/worlds/room610.world" />
    <arg name="map_frame" value="eng8"/>
    <arg name="INITIAL_POSE_X" value="$(arg INITIAL_POSE_X)" />
    <arg name="INITIAL_POSE_Y" value="$(arg INITIAL_POSE_Y)" />
    <arg name="INITIAL_POSE_YAW" value="$(arg INITIAL_POSE_YAW)" />
  </include>

  <node name="initial_pose_publisher" output="screen"
        pkg="jsk_robot_startup" type="initialpose_publisher.l">
    <rosparam subst_value="true">
      transform_frame: /eng8/6f/610
      initial_pose_x: $(arg INITIAL_POSE_X)
      initial_pose_y: $(arg INITIAL_POSE_Y)
      initial_pose_yaw: $(arg INITIAL_POSE_YAW)
    </rosparam>
  </node>

  <node name="tuckarm" output="screen"
        pkg="navigation_utils" type="pr2-tuckarm.l" />

  <node name="restore_padding" output="screen"
        pkg="expand_padding" type="restore_padding.py" >
    <rosparam subst_value="true">
      padding_name: /move_base_node/global_costmap/footprint_padding
      global_name: /move_base_node/global_costmap
    </rosparam>
  </node>


  <node pkg="rviz" type="rviz" name="$(anon jsk_startup_rviz)"
        args="-d $(find navigation_utils)/config/pr2_navigation.rviz" />
  
</launch>
